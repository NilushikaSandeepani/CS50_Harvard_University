#include <cs50.h>
#include <stdio.h>

int main (void)
{
    char answer = get_char("Do you agree? y or n: ");

    if (answer == 'y'|| answer == 'Y' || answer == 'yes' || answer == 'Yes' || answer == 'YES')
    {
        printf("You agreed.\n");
    }
    else if (answer == 'n' || answer == 'N' || answer == 'no' || answer == 'No' || answer == 'NO')
    {
        printf("You haven't agreed.\n");
    }
    else
    {
        printf("Incorrect Input.\n");
    }
}
